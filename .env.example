# ==========================================
# Gere uma secret key (ex: openssl rand -hex 64)
CHATWOOT_SECRET_KEY_BASE=change_me_to_a_secure_random_hex_string_64_bytes

# ==========================================
# EVOLUTION API (WHATSAPP)
# ==========================================
# Chave de API para autenticacao (ex: uuidgen)
EVOLUTION_API_KEY=change_me_to_a_secure_uuid

# ==========================================
# CLOUDFLARE (DNS CHALLENGE - SSL)
# ==========================================
CF_DNS_API_TOKEN=cole_seu_token_aqui
# ==========================================
# PORTAINER
# ==========================================
PORTAINER_USER=admin
PORTAINER_PASSWORD=SuaSenhaForteAqui123

# ==========================================
